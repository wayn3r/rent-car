@using RentCar.Helpers;
@model RentCar.Database.Entities.Rent

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Rent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NoRenta" class="control-label"></label>
                <input asp-for="NoRenta" class="form-control" />
                <span asp-validation-for="NoRenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpleadoId" class="control-label"></label>
                <select asp-for="EmpleadoId" class ="form-control" asp-items="ViewBag.EmpleadoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VehículoId" class="control-label"></label>
                <select asp-for="VehículoId" class ="form-control" asp-items="ViewBag.VehículoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FechaRenta" class="control-label"></label>
                <input asp-for="FechaRenta" class="form-control" />
                <span asp-validation-for="FechaRenta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaDevolución" class="control-label"></label>
                <input asp-for="FechaDevolución" class="form-control" />
                <span asp-validation-for="FechaDevolución" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MontoDia" class="control-label"></label>
                <input asp-for="MontoDia" class="form-control" />
                <span asp-validation-for="MontoDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CantidadDias" class="control-label"></label>
                <input asp-for="CantidadDias" class="form-control" />
                <span asp-validation-for="CantidadDias" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comentario" class="control-label"></label>
                <input asp-for="Comentario" class="form-control" />
                <span asp-validation-for="Comentario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                @Html.DropDownListFor(model => model.Estado, StatusSelectItemsHelper.GetStatusOptions(), null, new { @class = "form-control text-capitalize"})
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
